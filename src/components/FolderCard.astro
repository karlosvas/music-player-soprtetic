---
interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
---

<li class="link-card">
  <a href={href}>
    <h2>
      {title}
      <span>&rarr;</span>
    </h2>
  </a>
  <button title={title}>x</button>
</li>

<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px 0px 0px 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  .link-card {
    background-position: 0;
    background-image: var(--accent-gradient);
    color: rgb(var(--accent-light));
  }

  button {
    background: none;
    border: none;
    background-color: rgb(150, 168, 252);
    color: rgb(96, 96, 212);
    font-size: 1.25rem;
    cursor: pointer;
    margin-left: auto;
    padding: 0.5rem;
    border-radius: 0px 8px 8px 0px;
  }

  button:hover {
    background-color: rgb(96, 96, 212);
    color: white;
  }
</style>
